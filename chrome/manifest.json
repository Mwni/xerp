{
	"manifest_version": 3,
	"name": "XERP",
	"description": "A XRP Wallet in your Browser",
	"version": "0.1",
	"icons": {
		"128": "img/icon128.png"
	},
	"action": {
		"default_popup": "app.html"
	},
	"content_scripts": [
		{
		 "matches": [
				"https://*/*", 
				"http://*/*", 
				"file://*/*"
		],
		 "js": ["adapter.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage"
	]
}
